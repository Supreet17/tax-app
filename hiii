    <script>
        const slider = document.getElementById('zoomSlider');
        let currentSlideId = 'slide-1';

        function switchSlide(num) {
            currentSlideId = `slide-${num}`;
            document.querySelectorAll('.slide-wrapper').forEach(el => el.classList.remove('active'));
            document.getElementById(currentSlideId).classList.add('active');
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById(`btn-${num}`).classList.add('active');
            applyZoom();
        }

        function applyZoom() {
            const val = slider.value;
            const slide = document.getElementById(currentSlideId);
            if(slide) {
                slide.style.transform = `scale(${val})`;
                slide.style.marginBottom = `${val * 200}px`;
            }
        }

        slider.addEventListener('input', applyZoom);

        window.addEventListener('load', () => {
            const width = window.innerWidth - 240; 
            const scale = Math.min(width / 2000, 0.8); 
            slider.value = scale;
            applyZoom();
        });

        function hideControls() {
            document.getElementById('control-bar').style.opacity = '0';
            document.getElementById('control-bar').style.pointerEvents = 'none';
            document.getElementById('sidebar').style.opacity = '0';
        }

        function saveCurrentSlide() {
            const slide = document.getElementById(currentSlideId);
            const saveBtn = document.getElementById('saveBtn');
            const originalTransform = slide.style.transform;
            const originalMargin = slide.style.marginBottom;
            
            saveBtn.innerText = "Generating...";
            saveBtn.disabled = true;
            slide.style.transform = "none";
            slide.style.marginBottom = "0";

            html2canvas(slide, {
                scale: 2, 
                useCORS: true,
                allowTaint: true,
                backgroundColor: "#0f172a"
            }).then(canvas => {
                const link = document.createElement('a');
                link.download = `TARS-Slide-${currentSlideId}.png`;
                link.href = canvas.toDataURL("image/png");
                link.click();
                slide.style.transform = originalTransform;
                slide.style.marginBottom = originalMargin;
                saveBtn.innerText = "⬇ Save Current Slide (4K)";
                saveBtn.disabled = false;
            }).catch(err => {
                console.error(err);
                alert("Error generating image.");
                slide.style.transform = originalTransform;
                slide.style.marginBottom = originalMargin;
                saveBtn.innerText = "⬇ Save Current Slide (4K)";
                saveBtn.disabled = false;
            });
        }
    </script>
</body>
</html>
```
